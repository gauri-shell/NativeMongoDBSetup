<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Product List</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
</head>
<body>
    <div class="container mt-5">
        <h1>Product List</h1>
        <a href="/add" class="btn btn-primary mb-3">Add New Product</a>

        <% if (products && products.length > 0) { %>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Title</th>
                        <th>Price</th>
                        <th>Description</th>
                        <th>Image</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% products.forEach(product => { %>
                        <tr>
                            <td><%= product.title %></td>
                            <td><%= product.price %></td>
                            <td><%= product.description %></td>
                            <td><img src="<%= product.imageUrl %>" alt="<%= product.title %>" width="50"></td>
                            <td>
                                <a href="/edit/<%= product._id %>" class="btn btn-warning btn-sm">Edit</a>
                                <a href="/delete/<%= product._id %>" class="btn btn-danger btn-sm">Delete</a>
                            </td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        <% } else { %>
            <p>No products available.</p>
        <% } %>
    </div>
</body>
</html>
